<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BoxOffice" parent="Theme.BoxOffice.Base">
        <item name="android:colorEdgeEffect">@color/theme_edge_effect</item>
    </style>

    <style name="Theme.BoxOffice.Translucent">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.BoxOffice.NoActionBar" parent="Theme.BoxOffice.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect">@color/theme_edge_effect</item>
    </style>

    <style name="Theme.BoxOffice.NoActionBar.Translucent">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.BoxOffice.NoActionBar.MainActivity">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme_accent</item>
    </style>

</resources>