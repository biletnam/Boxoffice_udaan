<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.BoxOffice.Base" parent="Theme.AppCompat.Light">
        <!--<item name="android:windowBackground">@color/window_background</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->

        <!-- Color palette -->
        <item name="colorPrimary">@color/text_accent</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlNormal">@color/theme_control_normal</item>
        <item name="colorControlHighlight">@color/theme_control_highlight</item>
        <item name="colorButtonNormal">?colorAccent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_secondary_inverse</item>

        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
        <item name="actionBarTheme">@style/ThemeOverlay.BoxOffice.AppBar</item>
        <item name="actionButtonStyle">@style/Widget.BoxOffice.ActionButton</item>
        <item name="actionOverflowButtonStyle">@style/Widget.BoxOffice.ActionButton.Overflow</item>
        <item name="actionMenuTextColor">@color/text_accent_selector</item>
        
        <!-- Custom attributes-->
        <item name="emptyViewStyle">@style/Widget.BoxOffice.EmptyView</item>

    </style>

    <style name="Theme.BoxOffice" parent="Theme.BoxOffice.Base" />

    <style name="Theme.BoxOffice.NoActionBar" parent="Theme.BoxOffice.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BoxOffice.Translucent" />

    <style name="Theme.BoxOffice.NoActionBar.Translucent" />

    <style name="Theme.BoxOffice.NoActionBar.MainActivity" />

    <style name="Theme.BoxOffice.NoActionBar.AddToCart">
        <!--<item name="isFloatingWindow">true</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.BoxOffice.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlHighlight">@color/theme_control_highlight</item>
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!--<item name="android:background">#5fa3d0</item>-->
    </style>

</resources>